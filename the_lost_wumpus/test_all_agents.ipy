#!/usr/bin/env ipython

from glob import glob
import sys
from os import path

def main():
    agent_dir = sys.argv[1]
    worlds_dir = sys.argv[2]

    print agent_dir, worlds_dir
    for agent in glob(path.join(agent_dir, '*.py')):
        result = !launcher.py $agent $worlds_dir
        print path.basename(agent), result

if __name__ == '__main__':
    main()
